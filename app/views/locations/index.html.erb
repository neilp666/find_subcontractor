<div class="container">
  <div class="starter-template">
    <h3>SubContractor Finder</h3>
      <p class="lead">Use this postcode search to quickly find subcontractors in your area</p>
      <p><%= form_tag locations_path, :method => :get do %>
        <%= label :search, "Postcode : " %>
        <%= text_field_tag :search, params[:search], placeholder: "e.g M20 2WZ" %>

        <%= label :distance, "Distance : " %>
        <%= text_field_tag :distance, params[:distance] %>

        <%= submit_tag "Subcontractors near", :name => nil %>
      </p>
    <% end %>

     <table class="table">
        <tr>
          <td><strong>Company Name</strong></td>
          <td><strong>Address</strong></td>
          <td><strong>City</strong></td>
          <td><strong>Postcode</strong></td>
        </tr>

        <% @locations.each do |location| %>
        <tr>
          <td><%= location.company_name %></td>
          <td><%= location.address %></td>
          <td><%= location.city %></td>
          <td><%= location.postcode %></td>
        </tr>
        <% end %>
      </table>
 </div>
</div>
